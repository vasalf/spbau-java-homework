<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="ru.spbau.alferov.javahw.reversi.ui.GameScreenFXMLController"
          alignment="CENTER" hgap="10" vgap="10" fx:id="layout">
    <padding>
        <Insets top="40" left="40" right="40" bottom="40" />
    </padding>
    <columnConstraints>
        <ColumnConstraints minWidth="160" prefWidth="160"
                           maxWidth="160" hgrow="NEVER" />
        <ColumnConstraints minWidth="160" prefWidth="160"
                           maxWidth="160" hgrow="NEVER" />
        <ColumnConstraints minWidth="280" prefWidth="280"
                           maxWidth="280" hgrow="NEVER" />
    </columnConstraints>

    <GridPane fx:id="field" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="8"
              GridPane.halignment="CENTER" prefHeight="320" prefWidth="320">
    </GridPane>

    <Label fx:id="blackScore" GridPane.columnIndex="0" GridPane.rowIndex="8"
           GridPane.halignment="CENTER" styleClass="bold-label">Black:</Label>
    <Label fx:id="whiteScore" GridPane.columnIndex="1" GridPane.rowIndex="8"
           GridPane.halignment="CENTER" styleClass="bold-label">White:</Label>

    <Label fx:id="gameStatus" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.rowSpan="8"
           GridPane.halignment="CENTER" styleClass="bold-label" />
    <Button fx:id="newGame" GridPane.columnIndex="2" GridPane.rowIndex="8"
            GridPane.halignment="CENTER" prefWidth="160"
    onAction="#newGameAction">New Game</Button>
    <Button fx:id="mainMenu" GridPane.columnIndex="2" GridPane.rowIndex="9"
            GridPane.halignment="CENTER" prefWidth="160"
    onAction="#mainMenuAction">Main Menu</Button>

</GridPane>
