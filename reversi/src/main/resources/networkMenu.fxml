<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="ru.spbau.alferov.javahw.reversi.ui.NetworkMenuFXMLController"
          alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="40" right="40" left="40" bottom="40" />
    </padding>
    <columnConstraints>
        <ColumnConstraints minWidth="300" prefWidth="300"
                           maxWidth="Infinity" hgrow="ALWAYS" />
    </columnConstraints>

    <Button fx:id="connectToServer" text="Connect to server"
            prefHeight="80" prefWidth="200"
            defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="0"
            GridPane.halignment="CENTER"
            onAction="#handleConnectToServerAction"
    />
    <Button fx:id="becomeServer" text="Become a server"
            prefHeight="80" prefWidth="200"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            GridPane.halignment="CENTER"
            onAction="#handleBecomeServerButtonAction"
    />
</GridPane>
