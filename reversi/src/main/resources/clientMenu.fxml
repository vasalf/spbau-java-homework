<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="ru.spbau.alferov.javahw.reversi.ui.ClientMenuFXMLController"
          alignment="center" hgap="10" vgap="20">
    <padding>
        <Insets top="40" right="40" left="40" bottom="40" />
    </padding>
    <columnConstraints>
        <ColumnConstraints minWidth="50" prefWidth="50"
                           maxWidth="Infinity" hgrow="ALWAYS" />
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS" />
        <ColumnConstraints minWidth="50" prefWidth="50"
                           maxWidth="Infinity" hgrow="ALWAYS" />
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS" />
    </columnConstraints>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="RIGHT">Server:</Label>
    <TextField fx:id="server" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.halignment="RIGHT">Port:</Label>
    <TextField fx:id="port" GridPane.columnIndex="3" GridPane.rowIndex="0" />

    <Button fx:id="start" GridPane.columnIndex="3" GridPane.rowIndex="1"
            GridPane.halignment="CENTER" onAction="#handleStart">Start</Button>
</GridPane>
